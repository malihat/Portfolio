extends layout.pug 

block content 
    div#project
        div#project-title-tech
            div#project-title
                h1 #{project.project_name}
                p #{project.description}

            div#project-tech-links
                div#project-tech
                    h3 Technologies
                    ul
                        each tech in project.technologies
                            li= tech

                div#project-links
                    if project.live_link  
                        a(href=`${project.live_link}` target="_blank") Live Link
                    else 
                        a(href=`#`) Not available  
                    a(href=`${project.github_link}` target="_blank") Github Link

        img.image(src=`${project.images_url[1]}`)
        img.image(src=`${project.images_url[2]}`)
